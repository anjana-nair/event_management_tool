= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :date_of_event
    %br/
    = f.date_select :date_of_event
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :presenters
    %br/
    = f.text_area :presenters
  .field
    = f.label :companies
    %br/
    = f.text_area :companies
  .field
    = f.label :address
    %br/
    = f.text_area :address
  .field
    = f.label :contact
    %br/
    = f.text_area :contact
  .actions
    = f.submit